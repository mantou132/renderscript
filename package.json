{
  "name": "@algolia/renderscript",
  "version": "1.11.24",
  "description": "A custom JavaScript rendering engine based on puppeteer",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn clean && ttsc",
    "ci:start": "ALLOW_LOCALHOST=true yarn start",
    "clean": "rm -rf dist/",
    "dev": "nodemon",
    "dev:run": "yarn build && NODE_ENV=development node -r dotenv/config dist/index.js",
    "docker:install": "node dist/lib/install.js",
    "docker:build": "./scripts/build.sh",
    "docker:release": "VERSION=$(npx json -f package.json version) && docker push algolia/renderscript && docker push algolia/renderscript:$VERSION",
    "lint": "eslint --ext=jsx,ts,tsx,js .",
    "release": "yarn docker:build && yarn docker:release",
    "start": "UV_THREADPOOL_SIZE=100 node --max-old-space-size=520 dist/index.js",
    "semantic-release": "semantic-release",
    "test": "jest --runInBand src/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/algolia/renderscript.git"
  },
  "keywords": [
    "algolia",
    "puppeteer",
    "js renderer",
    "rendertron",
    "prerender"
  ],
  "author": "Algolia <contact@algolia.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/algolia/renderscript/issues"
  },
  "engines": {
    "node": "16.13.1",
    "yarn": "^1.19.0"
  },
  "homepage": "https://github.com/algolia/renderscript#readme",
  "devDependencies": {
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@types/cookie-parser": "1.4.2",
    "@types/csurf": "1.11.2",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.0",
    "@types/node": "16.11.6",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.10.1",
    "@typescript-eslint/parser": "5.10.1",
    "dotenv": "14.3.2",
    "ejs": "3.1.6",
    "eslint": "8.7.0",
    "eslint-config-algolia": "20.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-algolia": "2.0.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "26.0.0",
    "eslint-plugin-jsdoc": "37.7.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "jest": "27.4.7",
    "nodemon": "2.0.15",
    "prettier": "2.5.1",
    "semantic-release": "19.0.2",
    "ts-jest": "27.1.3",
    "ttypescript": "1.5.13",
    "typescript": "4.5.5",
    "typescript-transform-paths": "3.3.1"
  },
  "dependencies": {
    "@algolia/dns-filter": "1.1.25",
    "altheia-async-data-validator": "5.0.13",
    "body-parser": "1.19.1",
    "cookie-parser": "1.4.6",
    "csurf": "1.11.0",
    "express": "4.17.2",
    "hot-shots": "9.0.0",
    "puppeteer-core": "13.1.2",
    "stream-to-string": "1.2.0",
    "undici": "4.12.2",
    "uuid": "8.3.2"
  },
  "resolutions": {
    "chalk": "5.0.0"
  }
}
